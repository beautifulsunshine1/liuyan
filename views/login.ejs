    <script src="/js/bootstrap.min.js"></script>
	<script type="text/javascript">
	  $("input").focus(function(){
	       $("#cuowu").fadeOut();   
	   })
		//登录按钮的事件，用ajax提交表单
		$("#denglu").click(function(){
		    $.post("/dologin",{
		   "username":$("#username").val(),
		   "password":$("#password").val()
		 },function(result){
		    if(result=="1"){
			//注册成功
			alert("登录成功，即将进入首页");
			window.location="/";
			}else if(result=="-1"){
			 //用户名被占用
			   $("#cuowu").fadeIn();
			   $("#cuowu").html("用户名不存在");
			 }else if(result=="-2"){
			   $("#cuowu").fadeIn();
			   $("#cuowu").html("密码错误");
				}
		 });	
})
	    
	  
	  
	</script>

